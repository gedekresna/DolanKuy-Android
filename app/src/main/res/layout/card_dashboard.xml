<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
    android:id="@+id/linearLayout2"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:orientation="horizontal">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_weight="1"
        android:background="@drawable/card_radius"
        app:cardElevation="0dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/card_radius"
            android:padding="5dp"
            android:elevation="0dp">


            <TextView
                android:id="@+id/idWisataDashboard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/imageDashboard"
                android:layout_centerHorizontal="true"
                android:text="id"
                android:textSize="24sp"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/imageDashboard"
                android:layout_width="match_parent"
                android:layout_height="201dp"
                android:layout_centerHorizontal="true"
                app:srcCompat="@drawable/singapore" />

            <TextView
                android:id="@+id/descWisataDashboard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/idWisataDashboard"
                android:text="Description"
                android:textSize="15sp"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/nameWisataDashboard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/descWisataDashboard"
                android:layout_centerInParent="true"
                android:layout_margin="2dp"
                android:text="Name"
                android:textStyle="bold"
                android:fontFamily="@font/montserrat_regular"
                android:textSize="13sp" />

            <Button
                android:id="@+id/detailButton"
                android:layout_width="350dp"
                android:layout_centerHorizontal="true"
                android:layout_height="wrap_content"
                android:layout_below="@id/nameWisataDashboard"
                android:layout_marginBottom="10dp"
                android:background="@color/orange"
                android:text="Detail"
                android:textColor="@color/white" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>
</RelativeLayout>